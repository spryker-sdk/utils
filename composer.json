{
  "name": "spryker-sdk/utils",
  "description": "Spryker SDK Utils Module",
  "type": "library",
  "license": "proprietary",
  "require": {
    "php": ">=8.0",
    "ext-mbstring": "*",
    "composer/semver": "^3.4",
    "symfony/filesystem": "^6.0.0",
    "symfony/finder": "^6.0.0",
    "symfony/process": "^6.0.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0"
  },
  "require-dev": {
    "ext-zip": "*",
    "phpstan/phpstan": "^1.0.0",
    "phpunit/phpunit": "^9.5.0",
    "spryker/code-sniffer": "^0.17.20"
  },
  "autoload": {
    "psr-4": {
      "SprykerSdk\\Utils\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "SprykerSdk\\UtilsTest\\": "tests/Utils/"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": false
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "stan": "phpstan analyze src/",
    "linters": [
      "@cs-fix",
      "@cs-check",
      "@stan"
    ],
    "tests": "phpunit tests/"
  }
}
